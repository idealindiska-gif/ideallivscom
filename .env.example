# ================================================================================
# Environment Variables Template for Ideal Livs
# ================================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!
# ================================================================================

# ============================================
# WordPress Configuration
# ============================================

# Server-side WordPress URL (CRITICAL for Hostinger)
WORDPRESS_URL="https://crm.ideallivs.com"

# Public WordPress URLs
NEXT_PUBLIC_WORDPRESS_URL="https://crm.ideallivs.com"
NEXT_PUBLIC_WORDPRESS_API_URL="https://crm.ideallivs.com/wp-json"
WORDPRESS_API_URL="https://crm.ideallivs.com/wp-json"

# ============================================
# WooCommerce REST API Credentials
# ============================================
# Generate these in: WooCommerce → Settings → Advanced → REST API
# Permissions: Read/Write

# Server-side credentials (preferred)
WORDPRESS_CONSUMER_KEY="your_consumer_key_here"
WORDPRESS_CONSUMER_SECRET="your_consumer_secret_here"

# Public credentials (Hostinger fallback - REQUIRED!)
NEXT_PUBLIC_WORDPRESS_CONSUMER_KEY="your_consumer_key_here"
NEXT_PUBLIC_WORDPRESS_CONSUMER_SECRET="your_consumer_secret_here"

# ============================================
# Fourlines MCP API (Optional)
# ============================================
FOURLINES_MCP_KEY="your_mcp_key_here"
NEXT_PUBLIC_FOURLINES_MCP_KEY="your_mcp_key_here"

# ============================================
# Cache Revalidation
# ============================================
WORDPRESS_WEBHOOK_SECRET="your_webhook_secret_here"

# ============================================
# JWT Authentication
# ============================================
SIMPLE_JWT_AUTH_KEY="your_jwt_auth_key_here"

# ============================================
# Site Configuration
# ============================================
NEXT_PUBLIC_SITE_URL="https://www.ideallivs.com"
NODE_ENV="production"
NEXT_PUBLIC_DEBUG="false"

# ============================================
# Email Configuration
# ============================================
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT=587
SMTP_SECURE="tls"
SMTP_USER="info@ideallivs.com"
SMTP_PASS="your_smtp_password_here"
ADMIN_EMAIL="info@ideallivs.com"
SECONDARY_ADMIN_EMAIL="info@ideallivs.com"
FROM_EMAIL="info@ideallivs.com"

# ============================================
# Stripe Configuration
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
# Use TEST keys for development, LIVE keys for production

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_publishable_key_here"
STRIPE_SECRET_KEY="sk_live_your_secret_key_here"

# ============================================
# WhatsApp Configuration
# ============================================
# Format: Country code + number (no + or spaces)
# Example: For +46 728 494 801, use: 46728494801

NEXT_PUBLIC_WHATSAPP_PHONE="46728494801"
NEXT_PUBLIC_WHATSAPP_BUSINESS_NAME="Ideal Livs"

# Optional: Context-specific WhatsApp numbers
# NEXT_PUBLIC_WHATSAPP_PHONE_ORDERS="46728494801"
# NEXT_PUBLIC_WHATSAPP_PHONE_SUPPORT="46728494801"
